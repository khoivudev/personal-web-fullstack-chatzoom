<!DOCTYPE html>
<html lang="en">
<head>
<title>
    <%= title %>
</title>
   <% include ../../partials/head%>
</head>
<body>
    <% include ../../partials/header%>
    <main>
        <div class="login-container">
            <div class="col-md-6 m-auto">
                <div class="card card-body">
                    <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
                    <% include ../../partials/messages.ejs %>

                        <form action="/user/login" method="POST">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
                            </div>
                            <button type="submit" class="btn btn-block dark-on-hover">Login</button>
                        </form>
                        <br>
                        <a href="/user/auth/github" class="btn btn-git dark-on-hover"><i class="fab fa-github pr-1"></i>Continue with GitHub</a>
                        <p class="lead mt-4">
                            No Account? <a href="/user/register">Register</a>
                        </p>
                </div>
            </div>
        </div>
        <% include ../../partials/javascript%>
    </main>
    <% include ../../partials/footer%>
</body>
</html>